#!/usr/bin/env bash
# This script displays the PID, along with the process name, of processes whose name contains the word "bash".

for pid in /proc/[0-9]*; do
    if grep -q "bash" "$pid/comm" 2>/dev/null; then
        pid_value=$(basename "$pid")
        name=$(cat "$pid/comm")
        echo "$pid_value $name"
    fi
done
